#!/bin/sh

BASE=/usr/squeezecenter

# Some stuff does not seem to work without this
cd $BASE

case "$1" in
    start)
	echo "Starting Media Watcher"
	
	$BASE/media-watcher.pl &
	;;

    stop)
	echo "Stopping Media Watcher"

	killall -q media-watcher.pl
	;;

    *)
	echo "Usage: $0 {start|stop}"
	exit 1
esac

exit 0
