# drivers/char/jive/Makefile

menu "Jive hardware driver support"

config JIVE_DRIVER
	bool "Jive hardware support"
	depends on MACH_JIVE

config JIVE_IRTX
	tristate "Jive IR transmit Driver"
	depends on JIVE_DRIVER

config JIVE_MGMT
	tristate "Jive hardware mangement Driver"
	depends on JIVE_DRIVER

config JIVE_WHEEL
	tristate "Jive Wheel Driver"
	depends on JIVE_DRIVER

config JIVE_WHEEL_LEVELIRQ
	bool "Use level instead of edge IRQ triggering"
	depends on JIVE_WHEEL
	help
	  Say Y if you want to use level IRQ mode for the wheel
	  switch instead of edge triggering	

config JIVE_MATRIX
	tristate "Jive keyboard matrix Driver"

endmenu
